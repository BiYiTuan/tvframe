<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tv="http://schemas.android.com/apk/res/reco.frame.demo"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/px600"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" >

    <!-- 无阴影四边形光标 四边边框宽度均为2 -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/px200"
        android:layout_marginTop="@dimen/px100" >

        <reco.frame.tv.view.TvButton
            android:id="@+id/tv_1"
            android:layout_width="@dimen/px170"
            android:layout_height="@dimen/px110"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/px50"
            android:text="@string/market_name"
            tv:boarderInt="2"
            tv:cursorRes="@drawable/cursor_rectangle_boarder_orange"
            tv:durationLarge="170"
            tv:scale="1.1" >
        </reco.frame.tv.view.TvButton>

        <reco.frame.tv.view.TvButton
            android:id="@+id/tv_2"
            android:layout_width="@dimen/px170"
            android:layout_height="@dimen/px110"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/px20"
            android:layout_toRightOf="@+id/tv_1"
            android:text="@string/market_name"
            tv:boarderInt="2"
            tv:cursorRes="@drawable/cursor_rectangle_boarder_orange"
            tv:durationLarge="170"
            tv:scale="1.1" >
            
        </reco.frame.tv.view.TvButton>

        <reco.frame.tv.view.TvButton
            android:id="@+id/tv_3"
            android:layout_width="@dimen/px170"
            android:layout_height="@dimen/px110"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/px20"
            android:layout_toRightOf="@+id/tv_2"
            android:text="@string/market_name"
            tv:boarderInt="2"
            tv:cursorRes="@drawable/cursor_rectangle_boarder_orange"
            tv:durationLarge="170"
            tv:scale="1.1" >

        </reco.frame.tv.view.TvButton>
    </RelativeLayout>

    <!-- 有阴影圆角光标 有背景 有字  -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/px200"
        android:layout_marginTop="@dimen/px350" >
        
        <reco.frame.tv.view.TvButton
            android:id="@+id/tv_4"
            android:layout_width="@dimen/px170"
            android:layout_height="@dimen/px110"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/px50"
            android:background="@drawable/icon_reco"
            tv:boarderBottomInt="9"
            tv:boarderLeftInt="9"
            tv:boarderRightInt="8"
            tv:boarderTopInt="8"
            tv:cursorRes="@drawable/cursor_shadow"
            tv:durationLarge="170"
            tv:scale="1.1" >

        </reco.frame.tv.view.TvButton>

        <reco.frame.tv.view.TvButton
            android:id="@+id/tv_5"
            android:layout_width="@dimen/px170"
            android:layout_height="@dimen/px110"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/px20"
            android:layout_toRightOf="@+id/tv_4"
            android:background="@drawable/icon_reco"
            tv:boarderBottomInt="9"
            tv:boarderLeftInt="9"
            tv:boarderRightInt="8"
            tv:boarderTopInt="8"
            tv:cursorRes="@drawable/cursor_shadow"
            tv:durationLarge="170"
            tv:scale="1.1" >

        </reco.frame.tv.view.TvButton>

        <reco.frame.tv.view.TvButton
            android:id="@+id/tv_6"
            android:layout_width="@dimen/px170"
            android:layout_height="@dimen/px110"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/px20"
            android:layout_toRightOf="@+id/tv_5"
            android:background="@drawable/icon_reco"
            tv:boarderBottomInt="9"
            tv:boarderLeftInt="9"
            tv:boarderRightInt="8"
            tv:boarderTopInt="8"
            tv:cursorRes="@drawable/cursor_shadow"
            tv:durationLarge="170"
            tv:scale="1.1" >

        </reco.frame.tv.view.TvButton>
    </RelativeLayout>

    <!-- 覆盖型光标 禁放大-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/px200"
        android:layout_marginTop="@dimen/px600"
         >
        
        <reco.frame.tv.view.TvButton
            android:id="@+id/tv_7"
            android:layout_width="@dimen/px170"
            android:layout_height="@dimen/px110"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/px50"
            android:background="@android:color/holo_orange_light"
            android:text="@string/market_name"
            tv:cursorRes="@drawable/cursor_shine"
            tv:boarderBottomInt="19"
            tv:boarderLeftInt="19"
            tv:boarderRightInt="18"
            tv:boarderTopInt="18"
            tv:durationLarge="170"
            tv:scalable="false" >

        </reco.frame.tv.view.TvButton>

        <reco.frame.tv.view.TvButton
            android:id="@+id/tv_8"
            android:layout_width="@dimen/px170"
            android:layout_height="@dimen/px110"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/px20"
            android:layout_toRightOf="@+id/tv_7"
            android:background="@android:color/holo_orange_light"
            android:text="@string/market_name"
            tv:boarderBottomInt="19"
            tv:boarderLeftInt="19"
            tv:boarderRightInt="18"
            tv:boarderTopInt="18"
            tv:cursorRes="@drawable/cursor_shine"
            tv:durationLarge="170"
            tv:scalable="false" >

        </reco.frame.tv.view.TvButton>

        <reco.frame.tv.view.TvButton
            android:id="@+id/tv_9"
            android:layout_width="@dimen/px170"
            android:layout_height="@dimen/px110"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/px20"
            android:layout_toRightOf="@+id/tv_8"
            android:background="@android:color/holo_orange_light"
            android:text="@string/market_name"
            tv:cursorRes="@drawable/cursor_shine"
            tv:boarderBottomInt="19"
            tv:boarderLeftInt="19"
            tv:boarderRightInt="18"
            tv:boarderTopInt="18"
            tv:durationLarge="170"
            tv:scalable="false">
         
        </reco.frame.tv.view.TvButton>
    </RelativeLayout>

</RelativeLayout>